
    <div class="container">
        <h1 class="text-center">Eat-Da-Burger Checklist!</h1>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <h2 class="text-center">Burger Specials</h2>
                <ul class="text-center" style="list-style-type:none">
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">DEVOUR IT!</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
 
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <h2 class="text-center">Add Your Own Burger!</h2>
                <form class="create-update-form" action="/" method="POST">
                    <div class="form-group">
                        <label for="burger_name">Burger Name:</label>
                        <input type="text" id="burger_name" name="burger_name">
                    </div>

                    <button class="center-block" type="submit" name="devoured" value="0">Add Burger</button>
                </form>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <h2 class="text-center">Previously Eaten Burgers</h2>
                <ul class="text-center" style="list-style-type:none">
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                        </form>
                    </li>
                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>

    </div>
